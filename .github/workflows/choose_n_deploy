name: choose_n_deploy
on:
  workflow_dispatch:
jobs:
  deploy:
    permissions:
      contents: write
    runs-on: self-hosted
    steps:
      - uses: actions/checkout@v3
      - uses: actions/setup-python@v4
        with:
          python-version: '3.10' 
      - run: pip install -r resources/requirements.txt
      - name: Start server
        run: python deploy.py
      - name: Start deploy
        run: curl "http://localhost:5000"
